<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"
    android:background="@color/colorApp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_splash"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/img_size_splash"
        android:layout_marginTop="@dimen/img_size_splash"
        android:layout_marginEnd="@dimen/img_size_splash"
        android:layout_marginBottom="@dimen/img_size_splash"
        android:src="@drawable/ml_only_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/text_splash"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ml_only_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/center_guideline"
        android:layout_marginStart="@dimen/text_size_splash"
        android:layout_marginEnd="@dimen/text_size_splash"
        android:layout_marginTop="@dimen/text_size_splash"
        android:layout_marginBottom="@dimen/text_size_splash"
        />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/center_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>